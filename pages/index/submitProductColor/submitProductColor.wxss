/* pages/geren/submitScene/submitScene.wxss */
.sub{
  margin: 40rpx auto;
  padding: 0 5%;
  display: flex;
}
.sub-type{
  text-align: center;
  font-size: 32rpx;
  line-height: 64rpx;
  color: #555;
  flex: 1;
}
.sub-content{
  flex: 1;
  flex-grow:3;
  line-height: 60rpx;
  height:60rpx;
  font-size:28rpx;
  padding-left: 10rpx;
  color: #555;
  border:2rpx solid #c1c1c1;
}
.none-border{
   border: none !important;
}
.searchbar-result{
    margin-top: 0;
    font-size: 36rpx;
    height: 200rpx;
    overflow: auto;
    text-align: center;
    border-top: 1px solid #c1c1c1;
    border-bottom: 1px solid #c1c1c1
}
.searchbar-result:before{
    display: none;
}
.weui-cells::after {
  border: none
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.weui-cell__bd{
  padding: 0 5%;
  text-align: center
}

.hint {
  width: 90%;
  padding: 70rpx 5% 0 5%;
}

.hint>view{
  font-size: 28rpx;
  color: #c1c1c1;
  height: 40rpx;
  line-height: 40rpx;
}

.hint>button{
  margin-top: 200rpx;
}
.submit-desc{
  width: 90%;
  margin: 0 5%;
  min-height: 140rpx;
  border: 1px solid #c1c1c1
}