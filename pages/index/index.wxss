.yundou{
  padding-left: 36rpx;
}
.yun{
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #e7e7e7;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  -moz-justify-content: space-between;
}
.yun_text{
  font-size: 32rpx;
  color: #555;
  padding-top: 35rpx;
  position: relative;
}
.yun_img{
  width: 12rpx;
  height: 24rpx;
  margin-top: 48rpx;
  margin-right: 36rpx;
}
.special{
  position: absolute;
  right: -4rpx;
  width: 10rpx;
  height: 10rpx;
  background-color: #e72128;
  top: 35rpx;
  border-radius: 50%;
}
.login_in_header{
  margin-top: 50rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  -webkit-justify-content: center;
  -moz-justify-content: center;
  align-items: center;
  -webkit-align-items: center;
}
.login_in_header view{
  width: 60rpx;
  height: 2rpx;
  background-color: #575a5d;
}
.login_in_header text{
  padding: 0 10rpx;
  font-size: 32rpx;
  color: #555;
}
.login_get{
  width: 430rpx;
  height: 300rpx;
  border: 2rpx solid #e62129;
  margin: 28rpx auto 0;
  position: relative;
}
.point_to{
  width: 12rpx;
  height: 12rpx;
  margin-left: -6rpx;
  position: absolute;
  top: -7rpx;
  background-color: #fff;
  left: 50%;
  border-left: 2rpx solid #e62129;
  border-top: 2rpx solid #e62129;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  -o-transform: rotate(45deg);
  -moz-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
}
.login_content{
  margin-top: 36rpx;
  text-align: center;
  font-size: 32rpx;
  color: #000;
}
.day{
  font-size: 32rpx;
  color: #e62129;
}
.yun_number{
  margin: 36rpx 0;
  text-align: center;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  -webkit-justify-content: center;
  -moz-justify-content: center;
  align-items: center;
  -webkit-align-item: center;
}
